{{#if recipe.recipe_id}}
    <h1 class="pageTitle">Edit Recipe</h1>
{{else}}
    <h1 class="pageTitle">New Recipe</h1>
{{/if}}
<div id="main">
    {{#if recipe.recipe_id}}
        <form method="POST" action="/list/update/{{recipe.recipe_id}}" id="recipeform">
    {{else}}
        <form method="POST" action="/list/new" id="recipeform">
    {{/if}}
        <fieldset>
            <legend>RECIPE</legend>
            <label for="title">Title</label>
            <input type="text" name="title" id="title"
            {{#if recipe.title}} value="{{recipe.title}}" {{/if}}
            />
            <br />
            <label for="desc">Description</label>
            <textarea name="desc" id="desc" rows="4", cols="40">{{#if recipe.description}}{{recipe.description}}{{/if}}</textarea>
            <br />
            <label for="ingred">Ingredients</label>
            <textarea name="ingred" id="ingred" rows="8", cols="40">{{#if recipe.ingredients}}{{recipe.ingredients}}{{/if}}</textarea>
            <br />
            <label for="instruc">Instructions</label>
            <textarea name="intruc" id="instruc" rows="8", cols="40">{{#if recipe.Instructions}}{{recipe.instruccions}}{{/if}}</textarea>
            <br />
            <label for="credits">Category</label>
            <select name="categ" id="categ">
                <option value=1 {{#if recipe.categoryid == 1}} selected {{/if}}>Drink</option>
                <option value=2 {{#if recipe.categoryid == 2}} selected {{/if}}>Dessert</option>
                <option value=3 {{#if recipe.categoryid == 3}} selected {{/if}}>Smoothie</option>
            </select>
            <br />  
            <label for="title">Credits</label>
            <input type="text" name="credits" id="credits"
            {{#if recipe.credits}} value="{{recipe.credits}}"{{/if}}
            />
            <br />
            <input type="submit" value="Add Recipe"> 
        </fieldset>
    </form>
    {{#if error}}
        <p class="errorMessage">{{error}}</p>
    {{/if}}
</div>