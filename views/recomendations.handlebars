<main class="recs-page">
  <h1 class="pageTitle">PERSONAL RECOMMENDATIONS FOR COFFEE SHOPS</h1>

  <section class="recs-cardlist">
    {{#each cshop}}
      <article class="rec-card">
        <h2 class="rec-title">{{this.shop_name}}</h2>
        <p class="rec-sub">{{this.shop_location}}</p>
        <a class="rec-link" href="{{this.page_url}}" target="_blank" rel="noopener">Visit website</a>
      </article>
    {{/each}}
  </section>

  {{#if error}}
    <p class="errorMessage">{{error}}</p>
  {{/if}}
</main>
